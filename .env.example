# ========================
# Core Configuration
# ------------------------
DEBUG="False"
HOST="0.0.0.0"
PORT="8000"

# ========================
# Database Configuration
# ------------------------
DJANGO_DATABASE="sqlite"
# For SQLite, set the database path:
SQLITE_DB_PATH="/path/to/db.sqlite3"
# For PostgreSQL, uncomment and configure:
# POSTGRES_DB="swarm"
# POSTGRES_USER="postgres"
# POSTGRES_PASSWORD="your-postgres-password"
# POSTGRES_HOST="localhost"
# POSTGRES_PORT="5432"

# ========================
# Core API Keys
# ========================
OPENAI_API_KEY="your-openai-api-key"
BRAVE_API_KEY="your-brave-api-key"

# ========================
# Blueprint Specific Environment Variables
# ========================

# -- Personal Digital Assistants Blueprint --
# WEATHER_API_KEY: API key for weather information (e.g., OpenWeatherMap)
WEATHER_API_KEY="your-weather-api-key"
# QDRANT settings for Documentation Agent:
# QDRANT_URL should point to your Qdrant instance (e.g., "http://your-qdrant-domain:port")
QDRANT_URL="http://your-qdrant-domain:port"
# QDRANT_API_KEY: API key for Qdrant (if applicable)
QDRANT_API_KEY="your-qdrant-api-key"

# -- Flowise Blueprint --
# FLOWISE_API_KEY: API key for Flowise integration.
FLOWISE_API_KEY="your-flowise-api-key"
# FLOWISE_API_ENDPOINT: Endpoint URL for Flowise services.
FLOWISE_API_ENDPOINT="http://localhost:3000"

# -- Divine Ops and Other Blueprints --
# SERPAPI_API_KEY: API key for SerpAPI integration for search operations.
SERPAPI_API_KEY="your-serpapi-api-key"
# WP_SITES_PATH: Filesystem path for WordPress sites used in blueprints.
WP_SITES_PATH="/path/to/wp-sites.json"

# -- Miscellaneous / Core Operational Variables --
# ENABLE_ADMIN: Enable Django admin interface (true/false)
ENABLE_ADMIN="false"
# ENABLE_WEBUI: Enable web user interface (true/false)
ENABLE_WEBUI="false"
# STATEFUL_CHAT_ID_PATH: JMESPath expression or file path for stateful chat ID extraction.
STATEFUL_CHAT_ID_PATH="/default/path/to/stateful/chat_id"
# SWARM_BLUEPRINTS: Comma-separated list of blueprint names to enable.
SWARM_BLUEPRINTS="blueprint1,blueprint2"
# LLM: Specifies the default LLM when none is specified for the agent (e.g., "default", "gpt4o")
DEFAULT_LLM="default"
# SUPPRESS_DUMMY_KEY: Set to true to suppress dummy API key warnings.
SUPPRESS_DUMMY_KEY="false"
